@model EmpPortal.Common.ViewModels.EmployeeViewModel
@{ 
    ViewData["Title"] = "Employee Portal";
}

@section scripts {
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div>
    <form asp-controller="Employee" asp-action="Add" method="post">
        <h1 class="page-header">Add Employee</h1>
        <div class="row">
            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="FirstName" type="text" />
                    <br />
                    <span asp-validation-for="FirstName" />
                </div>
            </div>

            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="LastName" type="text" />
                    <br />
                    <span asp-validation-for="LastName" />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="DateOfBirth"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="DateOfBirth" type="date" />
                    <br />
                    <span asp-validation-for="DateOfBirth" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="DateOfJoining"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="DateOfJoining" type="date" />
                    <br />
                    <span asp-validation-for="DateOfJoining" />
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="PrimaryEmail"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="PrimaryEmail" type="email" />
                    <br />
                    <span asp-validation-for="PrimaryEmail" />
                </div>
            </div>
            <div class="col-sm-6">
                <div class="col-sm-4">
                    <label asp-for="SecondaryEmail"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="SecondaryEmail" type="email" />
                    <br />
                    <span asp-validation-for="SecondaryEmail" />
                </div>
            </div>
        </div>

        <br />

        <div class="row">
            <div class="col-sm-8">
            </div>
            <div class="col-sm-4 right">
                <button type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>
